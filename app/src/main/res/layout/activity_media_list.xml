<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_title_heigh"
        android:background="@color/main_color">

        <ImageButton
            android:id="@+id/media_back_button"
            android:layout_width="@dimen/layout_title_content_heigh"
            android:layout_height="@dimen/layout_title_content_heigh"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_back_arrow_white_selector"
            android:paddingLeft="28dp" />

        <Button
            android:id="@+id/media_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:visibility="gone" />

        <!--<Button-->
        <!--android:id="@+id/media_cancel_button"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:background="#00000000"-->
        <!--android:text="@string/media_list_cancel_button"-->
        <!--android:textAllCaps="false"-->
        <!--android:textColor="@color/colorPrimary"-->
        <!--android:visibility="invisible"/>-->
        <TextView
            android:id="@+id/media_select_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="#00000000"
            android:paddingRight="12dp"
            android:text="@string/select"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/ll_bar_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/media_select_delect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#00000000"
                android:src="@mipmap/media_delete" />

            <ImageButton
                android:id="@+id/media_select_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_selectall" />

            <TextView
                android:id="@+id/media_select_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#00000000"
                android:padding="12dp"
                android:text="@string/cancle"
                android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>


    <ListView
        android:id="@+id/media_list_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
