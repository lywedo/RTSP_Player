<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.CardMediaListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0196FE">

        <ImageButton
            android:id="@+id/card_media_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:padding="10dp"
            android:src="@mipmap/back"/>

        <info.hoang8f.android.segmented.SegmentedGroup
            android:id="@+id/card_media_segmentedGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/card_media_device_files_radioButton"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device"/>

            <RadioButton
                android:id="@+id/card_media_local_files_radioButton"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Local"/>

        </info.hoang8f.android.segmented.SegmentedGroup>

        <ImageButton
            android:id="@+id/card_media_download_button"
            android:background="#00000000"
            android:src="@mipmap/media_download"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/card_media_delete_button"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/card_media_delete_button"
            android:background="#00000000"
            android:src="@mipmap/media_delete"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/card_media_select_button"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/card_media_select_button"
            android:background="#00000000"
            android:src="@mipmap/media_select"
            android:padding="12dp"
            android:layout_marginRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/card_media_list_swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/card_media_list_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/card_media_list_empty_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="List is empty"
            android:textSize="20sp"/>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
