<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color">

        <ImageButton
            android:id="@+id/setting_backButton"
            android:layout_width="@dimen/layout_title_content_heigh"
            android:layout_height="@dimen/layout_title_content_heigh"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_back_arrow_white_selector"
            android:padding="12dp"
            android:contentDescription="@string/setting_back_button_contentDescription"/>

        <TextView
            android:id="@+id/setting_version_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:padding="8dp"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/setting_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
